<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <TextView
        android:id="@+id/text_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:padding="5dp"
        android:text="Selecione a opção:" />

    <Button
        android:id="@+id/go_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_init"
        android:layout_centerHorizontal="true"
        android:text="Comentar Fotos" />

    <Button
        android:id="@+id/go_tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/go_comment"
        android:layout_centerHorizontal="true"
        android:text="Definir Tags" />

</RelativeLayout>